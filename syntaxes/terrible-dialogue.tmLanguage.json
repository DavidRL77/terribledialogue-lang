{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TerribleDialogue",
  "scopeName": "source.tdlg",
  "patterns": [
    { "include": "#header" },
    { "include": "#flow" },
    { "include": "#strings" },
    { "include": "#attributes"}
  ],
  "repository": {
    "header": {
      "patterns": [
        {
          "name": "meta.section.terrible-dialogue",
          "match": "^(\\s*)(set|node)(\\s+)([A-Za-z0-9_]+):(\\s*)$",
          "captures": {
            "2": { "name": "entity.name.type.flow-target.terrible-dialogue" },
            "4": { "name": "entity.name.tag.terrible-dialogue" },
            "5": { "name": "punctuation.separator.colon.terrible-dialogue" }
          }
        }
      ]
    },

    "flow": {
      "patterns": [
        {
          "name": "meta.flow-target.terrible-dialogue",
          "match": "^\\s*(goto)\\s(?:(node|set):([A-Za-z0-9_]+)|(END|nothing|random|previous))(\\snow)?$",
          "captures": {
            "1": { "name": "keyword.control.terrible-dialogue" },
            "2": { "name": "entity.name.function.terrible-dialogue" },
            "3": { "name" : "entity.name.selector.terrible-dialogue"},
            "4": { "name": "keyword.control.terrible-dialogue"},
            "5": {"name": "keyword.modifier.terrible-dialogue"}
          }
        },
        {
          "name": "meta.flow-start.terrible-dialogue",
          "match": "^\n?\\s*>>\\s*(node):?([A-Za-z0-9_]*)|(random)$",
          "captures": {
            "1": { "name": "keyword.control.terrible-dialogue" },
            "2": { "name": "entity.name.function.terrible-dialogue" },
            "3": { "name" : "keyword.control.terrible-dialogue"}
          }
        }
      ]
    },

    "strings": {
      "name": "string.quoted.double.terrible-dialogue",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.terrible-dialogue",
          "match": "\\\\."
        }
      ]
    },

    "attributes": {
      "name": "meta.line-attributes.terrible-dialogue",
      "match": "\\[([A-Za-z0-9_]+)=(\"?[A-Za-z0-9_]+\"?)\\]",
      "captures": {
        "1": {"name":"entity.other.attribute-name"}
      }
    }
  }
}
